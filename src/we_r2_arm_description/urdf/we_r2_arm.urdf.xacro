<?xml version="1.0"?>

<robot xmlns:xacro="https://www.ros.org/wiki/xacro" name="we_r2_arm">

  <xacro:property name="PI" value="3.14159" />
  <xacro:property name="effort" value="100.0" />
  <xacro:property name="velocity" value="0.5" />

  <link name="world" />

  <link name="base_link">
      <visual>
          <origin rpy="0 0 0"  xyz="0 0 0" />
          <geometry>
            <mesh filename="package://we_r2_arm_description/meshes/basement.stl" scale="1 1 1" />
          </geometry>
      </visual>
  </link>

  <link name="shoulder_1">
    <visual>
      <origin rpy="0 0 0"  xyz="0 0 -0.09" />
          <geometry>
            <mesh filename="package://we_r2_arm_description/meshes/1.stl" scale="1 1 1" />
          </geometry>
    </visual>
  </link>

  <link name="shoulder_2">
    <visual>
      <origin rpy="0 0 0"  xyz="-0.0925 0 -0.1225" />
          <geometry>
            <mesh filename="package://we_r2_arm_description/meshes/2.stl" scale="1 1 1" />
          </geometry>
    </visual>
  </link>

  <link name="arm_1">
    <visual>
      <origin rpy="0 0 0"  xyz="-0.0925 0 -0.238" />
          <geometry>
            <mesh filename="package://we_r2_arm_description/meshes/3.stl" scale="1 1 1" />
          </geometry>
    </visual>
  </link>

  <link name="shoulder_3">
    <visual>
      <origin rpy="0 0 0"  xyz="-0.0925 0 -0.353" />
          <geometry>
            <mesh filename="package://we_r2_arm_description/meshes/4.stl" scale="1 1 1" />
          </geometry>
    </visual>
  </link>

  <joint name="virtual_joint" type="fixed">
    <parent link="world" />
    <child link="base_link" />
    <origin rpy="0 0 0" xyz="0 0 0" />
  </joint>

  <joint name="joint_0" type="revolute">
    <parent link="base_link" />
    <child link="shoulder_1" />
    <origin rpy="0 0 0" xyz="0 0 0.09" />
    <axis xyz="0 0 1" />
    <limit lower="-${PI/2}" upper="${PI/2}" effort="${effort}" velocity="${velocity}" />
  </joint>

  <joint name="joint_1" type="revolute">
    <parent link="shoulder_1" />
    <child link="shoulder_2" />
    <origin rpy="0 0 0" xyz="0.0925 0 0.0375" />
    <axis xyz="1 0 0" />
    <limit lower="-${PI/2}" upper="${PI/2}" effort="${effort}" velocity="${velocity}" />
  </joint>

  <joint name="joint_2" type="fixed">
    <parent link="shoulder_2" />
    <child link="arm_1" />
    <origin rpy="0 0 0" xyz="0 0 0.115" />
  </joint>

  <joint name="joint_3" type="fixed">
    <parent link="arm_1" />
    <child link="shoulder_3" />
    <origin rpy="0 0 0" xyz="0 0 0.115" />
  </joint>

</robot>